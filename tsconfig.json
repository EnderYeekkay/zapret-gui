  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "jsx": "react-jsx",
