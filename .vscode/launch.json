{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Main + Renderer",
      "configurations": ["Main", "Renderer"],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Renderer",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5173",   // Vite dev server
      "webRoot": "${workspaceFolder}/public/mainwindowr/src"
    },
    {
      "name": "Main",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": [".", "--remote-debugging-port=9222", "-i"],
      "env": {
        "VITE_DEV_SERVER_URL": "http://localhost:5173"
      },
      "outputCapture": "std",
      "console": "integratedTerminal"
    }
  ]
}
